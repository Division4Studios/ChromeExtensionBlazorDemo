{
  "manifest_version": 3,
  "name": "ChromeExtensionBlazorDemo",
  "version": "1.0",
  "action": {
    "default_popup": "wwwroot/index.html"
  },
  "permissions": [ "activeTab", "scripting" ],
  "background": {
    "service_worker": "wwwroot/background.js"
  },
  "host_permissions": [ "https://*/*" ],
  "content_security_policy": {
    "extension_pages": "script-src 'wasm-unsafe-eval';"
  }
}